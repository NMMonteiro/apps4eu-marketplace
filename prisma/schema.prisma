generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String    @id @default(uuid())
  name          String
  description   String?
  price         Decimal   @db.Decimal(10, 2) // Lifetime or default price
  stripePriceId String?
  
  // Subscription Pricing
  billingType   String    @default("LIFETIME") // LIFETIME or SUBSCRIPTION
  price1m       Decimal?  @db.Decimal(10, 2)
  price12m      Decimal?  @db.Decimal(10, 2)
  price24m      Decimal?  @db.Decimal(10, 2)
  
  appUrl        String?   // The URL to the hosted webapp
  imageUrl      String?   // Demo/Product image
  category      String?   // e.g. "AI Tools", "Business", "Marketing"
  licenses      License[]
  createdAt     DateTime  @default(now())
}

model License {
  id          String    @id @default(uuid())
  userId      String    // Supabase Auth User ID
  productId   String
  product     Product   @relation(fields: [productId], references: [id])
  licenseKey  String    @unique @default(uuid())
  status      String    @default("active") // active/revoked
  expiresAt   DateTime? // For subscriptions
  createdAt   DateTime  @default(now())
}

model Transaction {
  id              String   @id @default(uuid())
  paymentIntentId String   @unique
  userId          String
  amount          Decimal  @db.Decimal(10, 2)
  status          String
  createdAt       DateTime @default(now())
}

model EmailTemplate {
  id        String   @id @default(uuid())
  slug      String   @unique // e.g. "signup-confirmation"
  subject   String
  body      String   @db.Text
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
